{% extends "AppBundle::layout.html.twig" %}

{% block title %}AppBundle:Blog:index{% endblock %}

{% block content %}
<h1>Posts list</h1>

{% for post in posts %}
    <div>
        <h3>{{ post.title }}</h3>
        <p>{{ post.text }}</p>
        <a href="{{ path("view", {'id': post.id}) }}" class="btn btn-default">Details</a>
    </div>
{% endfor %}

{% endblock %}
