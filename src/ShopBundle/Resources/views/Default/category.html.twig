{% extends 'ShopBundle:Default:index.html.twig' %}

{% block content %}

    <h2>{{ category.title }} <small>category</small></h2>
    
    {% for item in items %}
        <div class="col-md-4 item">
            <h5>{{ item.title }}</h5>
            <p>{{ item.description }}</p>
            <div class="price">$ {{ item.price | number_format(2) }}</div>
        </div>
    {% else %}
    
        <h4>We can't find any product related to this category :(</h4>
    
    {% endfor %}

{% endblock %}