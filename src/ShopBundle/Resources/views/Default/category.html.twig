{% extends 'ShopBundle:Default:index.html.twig' %}

{% block content %}

    <h2>{{ category.title }} <small>category</small></h2>
    
    <div class="productsList">
        {% for item in items %}
            <div class="col-md-4 item">
                <h5>{{ item.title }}</h5>
                <div class="image" style="background-image: url(/images/products/{{ item.id }}.jpg)"></div>
                <p>{{ item.description }}</p>
                <div class="price">$ {{ item.price | number_format(2) }}</div>
                
                <a href="{{ path('shop_item', {'category_name': category.title, id: item.id}) }}" class="btn btn-default">More details</a>
                
                <div class="pull-right">
                {% if item.comments is defined and item.comments|length > 0 %} 
                    <b>{{ item.comments|length }} Reviews</b>
                {% else %}
                    <i>No reviews yet</i>
                {% endif %}
                </div>
           </div>
        {% else %}
    </div>
    
        <h4>We can't find any product related to this category :(</h4>
        <div class="text-center">
            <img src="/images/sad.jpg" width=200 />
        </div>
    
    {% endfor %}

{% endblock %}